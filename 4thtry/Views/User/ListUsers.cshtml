@model List<_4thtry.Context.User>
@{
    ViewBag.Title = "ListUsers";
}

<h2>ListUsers</h2>


<table class="table table-hover">
    <tr>
        <th>UserId</th>
        <th>Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Password</td>

            <td>
                    <a href="@Url.Action("Users", new {item.UserId,item.Name,item.Email,item.Password})"><i class="glyphicon glyphicon-pencil"></i></a>
                <a href="@Url.Action("Delete","User",new {@item.UserId})"><i class="glyphicon glyphicon-trash"></i></a>
            </td>

        </tr>
         @item.UserId
    }

</table>
