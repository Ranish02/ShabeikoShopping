                @if (User.Identity.IsAuthenticated)
                {
                    <span> Hi, @User.Identity.Name</span>
                    using (Html.BeginForm("Logout", "User", FormMethod.Get))
                    {
                        <button class="btn btn-outline-danger my-2 my-sm-0" type="submit" value="Submit" style="margin-left:10px;">Logout</button>
                    }
                }
                @if (User.Identity.IsAuthenticated == false)

                {
                    using (Html.BeginForm("Login", "User", FormMethod.Get))
                    {
                        <button class="btn btn-outline-info my-2 my-sm-0" type="submit" value="Submit">Login</button>
                    }

                    @*<li class="nav-item">
