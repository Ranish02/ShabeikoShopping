                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("checkout","Product")">Cart <i class="fas fa-shopping-cart"></i></a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                @using (Html.BeginForm("ShoppingPage", "Product"))
                {
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" name="searchstring" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Submit">Search</button>
                }
