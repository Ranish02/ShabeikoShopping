@model IEnumerable<_4thtry.Context.product >
@{
    ViewBag.Title = "ShoppingPage";
}
<head>
    <link href="~/CSS/ShoppingPage1.css" rel="stylesheet" />
</head>
<h2>ShoppingPage</h2>

<div class="banner-area">
    <img src="~/WebsiteImages/shabeiko logo 4by4 .png" width="400" height="400" alt="Shabeiko Organic Farm" />

</div>
<div class="content-area">
    <h2>Check out these freshest veggies!!!</h2>

    <section id="facilities">
        <div class="container">
            <div class="title">
                <div class="row">
                    @foreach (var item in Model)
                    {

                        <div class="col-md-4">
                            <div class="card text-center">
                                <img src="@Url.Content(item.product_img)" alt="No img found" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">@item.product_name</h5>
                                    <p class="card-text">Description: @item.product_des</p>
                                    <p class="card-text"> Nrs: @item.product_price /-</p>
                                    @if (@item.product_stock >= 1)
                                    {
                                        <p class="card-text"> Only: @item.product_stock left</p>
                                        <a class="btn btn-sm btn-success" href="@Url.Action("addtocart",new { Id = @item.product_id })">Add to Cart</a>
                                        <a class="btn btn-sm btn-dark" href="@Url.Action("checkcanreview",new { Id = @item.product_id })">Details</a>
                                        @* <a href="@Url.Action("addtocart","Product",new { Id = item.product_id })">Add to cart</a>
                            <a href="@Url.Action("checkcanreview","Product",new { Id = item.product_id })">Details</a>*@
                                    }
                                    else
                                    {
                                        <div>Out of Stock</div>
                                    }

                                </div>
                            </div>
                        </div>

                    }
                </div>

                </div>
        </div>
    </section>



</div>























